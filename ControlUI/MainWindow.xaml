<Window x:Class="ControlUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machine Control" Height="300" Width="700">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GEMMA Mode :" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtGEMMAMode" Text="NaN" FontSize="14" TextWrapping="Wrap"/>
            <Button Content="Lire GEMMA Mode" Click="ReadGemmaMode_Click" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="BtnAuto" Content="Mode Auto" Width="150" Height="40" Margin="5" Click="BtnAuto_Click"/>
            <Button x:Name="BtnManual" Content="Mode Manuel" Width="150" Height="40" Margin="5" Click="BtnManual_Click"/>
            <Button x:Name="BtnInit" Content="Init Cycle" Width="150" Height="40" Margin="5" Click="BtnInit_Click"/>
            <Button x:Name="BtnStartCycle" Content="Démarrer Cycle" Width="150" Height="40" Margin="5" Click="BtnStartCycle_Click"/>

            <TextBlock x:Name="TxtStatus" 
                   Text=""
                   FontSize="16" 
                   Margin="10"
                   HorizontalAlignment="Center"
                   FontStyle="Italic"
                   TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Numéro de fiole :" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtFiole" 
                Text="NaN"
                FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FioleInput" Width="80" Margin="0,10,10,0"/>
                <Button Content="Valider" Margin="0,10,0,0" Click="ValidateFiole_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>


</Window>