<Window x:Class="ControlUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machine Control" Height="300" Width="400">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button x:Name="BtnAuto" Content="Mode Auto" Width="150" Height="40" Margin="5" Click="BtnAuto_Click"/>
        <Button x:Name="BtnManual" Content="Mode Manuel" Width="150" Height="40" Margin="5" Click="BtnManual_Click"/>
        <Button x:Name="BtnInit" Content="Cycle Init" Width="150" Height="40" Margin="5" Click="BtnInit_Click"/>

        <TextBlock x:Name="TxtGemma" 
                   Text="GEMMA mode: Inconnu"
                   FontSize="16" 
                   Margin="10" 
                   HorizontalAlignment="Center"/>

    </StackPanel>
</Window>