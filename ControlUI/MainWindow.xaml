<Window x:Class="ControlUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machine Control" Height="600" Width="1100">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GEMMA Mode :" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtGEMMAMode" Text="NaN" FontSize="14" TextWrapping="Wrap"/>

            <Separator Margin="0,20,0,0" />

            <TextBlock Text="Numéro de fiole :" FontWeight="Bold" FontSize="16" Margin="0,20,0,0"/>
            <TextBlock x:Name="TxtFiole" Text="NaN" FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="FioleInput" Width="80" Margin="0,5,10,0"/>
                <Button Content="Valider" Margin="0,5,0,0" Click="ValidateFiole_Click"/>
            </StackPanel>

            <Separator Margin="0,20,0,0" />

            <TextBlock Text="A coordinates" FontWeight="Bold" FontSize="16" Margin="0,20,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0">
                <TextBlock Text="Plateau" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                <TextBlock x:Name="TxtDest_P_A" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                <TextBlock Text="X" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="TxtDest_X_A" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
                <TextBlock Text="Y " FontWeight="Bold" FontSize="14" Margin="15,0,0,0"/>
                <TextBlock x:Name="TxtDest_Y_A" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
                <TextBlock Text="Z" FontWeight="Bold" FontSize="14" Margin="15,0,0,0"/>
                <TextBlock x:Name="TxtDest_Z_A" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>

            <TextBlock Text="B coordinates" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0">
                <TextBlock Text="Plateau" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                <TextBlock x:Name="TxtDest_P_B" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                <TextBlock Text="X" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="TxtDest_X_B" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
                <TextBlock Text="Y " FontWeight="Bold" FontSize="14" Margin="15,0,0,0"/>
                <TextBlock x:Name="TxtDest_Y_B" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
                <TextBlock Text="Z" FontWeight="Bold" FontSize="14" Margin="15,0,0,0"/>
                <TextBlock x:Name="TxtDest_Z_B" Text="NaN" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>

            <Separator Margin="60,10,60,0" />

            <TextBlock Text="Set coordinates" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Plateau:" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                <ComboBox x:Name="CmbPlateau" Width="40" Height="20" SelectedIndex="0" Margin="10,0,40,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Slide:" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                <TextBlock Text="X" FontSize="14" Margin="10,0,0,0"/>
                <ComboBox x:Name="CmbSlideX" Width="40" Height="20" SelectedIndex="0" Margin="5,0,0,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                </ComboBox>
                <TextBlock Text="Y" FontSize="14" Margin="10,0,0,0"/>
                <ComboBox x:Name="CmbSlideY" Width="40" Height="20" SelectedIndex="0" Margin="5,0,40,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Cavity:" FontWeight="Bold" FontSize="14" Margin="10,0,0,0"/>
                <TextBlock Text="X" FontSize="14" Margin="10,0,0,0"/>
                <ComboBox x:Name="CmbCavityX" Width="40" Height="20" SelectedIndex="0" Margin="5,0,0,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                </ComboBox>
                <TextBlock Text="Y" FontSize="14" Margin="10,0,0,0"/>
                <ComboBox x:Name="CmbCavityY" Width="40" Height="20" SelectedIndex="0" Margin="5,0,40,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                </ComboBox>
            </StackPanel>
            <Button x:Name="BtnSendCoord" Content="Send coordinates" Width="120" Height="20" Margin="0,20,0,0" Click="BtnSendCoord_Click" Background="#d9ddf9"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnAcquitDef" Content="Acquit. Def." Width="100" Height="40" Margin="5" Click="BtnAcquitDef_Click" Background="#d2c58d"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnAuto" Content="Auto" Width="65" Height="40" Margin="5" Click="BtnAuto_Click"/>
                <Button x:Name="BtnManual" Content="Manual" Width="65" Height="40" Margin="5" Click="BtnManual_Click"/>
            </StackPanel>

            <Separator Margin="0,10,0,10" />

            <Button x:Name="BtnInit" Content="Init cycle" Width="150" Height="40" Margin="5" Click="BtnInit_Click" Background="#b5e0b3"/>

            <Separator Margin="0,10,0,10" />

            <Button x:Name="BtnStartCycle" Content="Start cycle" Width="150" Height="40" Margin="5" Click="BtnStartCycle_Click" Background="#9dd2e0"/>
            <Button x:Name="BtnStopCycle" Content="Stop cycle" Width="150" Height="40" Margin="5" Click="BtnStopCycle_Click" Background="#9dd2e0"/>

            <Separator Margin="0,10,0,10" />

            <Button x:Name="BtnStartCollect" Content="Start collect" Width="150" Height="40" Margin="5" Click="StartCollect_Click" IsEnabled="False" Background="#d5bbe0"/>
            <Button x:Name="BtnStopCollect" Content="Stop collect" Width="150" Height="40" Margin="5" Click="StopCollect_Click" IsEnabled="False" Background="#d5bbe0"/>

            <TextBlock x:Name="TxtStatus" 
                   Text=""
                   FontSize="16" 
                   Margin="5,20,5,5"
                   HorizontalAlignment="Center"
                   FontStyle="Italic"
                   TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Word 0:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="Request Analyse Vision A" Width="150"/>
                <Ellipse x:Name="LedRequestAnalyseVisionA" Width="16" Height="16" Stroke="Black" StrokeThickness="1" Fill="Gray"/>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="Request Analyse Vision B" Width="150"/>
                <Ellipse x:Name="LedRequestAnalyseVisionB" Width="16" Height="16" Stroke="Black" StrokeThickness="1" Fill="Gray"/>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="Request Control Void A" Width="150"/>
                <Ellipse x:Name="LedRequestControlVoidA" Width="16" Height="16" Stroke="Black" StrokeThickness="1" Fill="Gray"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="Request Control Void B" Width="150"/>
                <Ellipse x:Name="LedRequestControlVoidB" Width="16" Height="16" Stroke="Black" StrokeThickness="1" Fill="Gray"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnAnalyseVisionADone" Content="An. Vis. A Done" Width="100" Height="40" Margin="5,20,5,5" Click="AnalyseVisionADone_Click" IsEnabled="False" Background="#d5bbe0"/>
                <Button x:Name="BtnAnalyseVisionBDone" Content="An. Vis. B Done" Width="100" Height="40" Margin="5,20,5,5" Click="AnalyseVisionBDone_Click" IsEnabled="False" Background="#d5bbe0"/>
            </StackPanel>

            <Separator Margin="0,50,0,0" />

            <Button x:Name="BtnHardReset" Content="Hard Reset" Width="100" Height="40" Margin="5,50,5,5" Click="BtnHardReset_Click" Background="#eb878e"/>
        </StackPanel>
        
        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Main cycle step:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtStepCyclePrincipal" Text="NaN" FontSize="14" Margin="0,0,0,50"/>

            <TextBlock Text="Word 90:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtWord90" 
                Text="NaN"
                FontSize="14"/>
        </StackPanel>

    </Grid>


</Window>