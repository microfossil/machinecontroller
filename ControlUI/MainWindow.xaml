<Window x:Class="ControlUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machine Control" Height="600" Width="1100">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="GEMMA Mode :" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtGEMMAMode" Text="NaN" FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="BtnAuto" Content="Mode Auto" Width="150" Height="40" Margin="5" Click="BtnAuto_Click"/>
            <Button x:Name="BtnManual" Content="Mode Manuel" Width="150" Height="40" Margin="5" Click="BtnManual_Click"/>
            <Button x:Name="BtnInit" Content="Init Cycle" Width="150" Height="40" Margin="5" Click="BtnInit_Click" Background="#b5e0b3"/>
            <Button x:Name="BtnStartCycle" Content="Démarrer Cycle" Width="150" Height="40" Margin="5" Click="BtnStartCycle_Click" Background="#9dd2e0"/>
            <Button x:Name="BtnStopCycle" Content="Arrêter Cycle" Width="150" Height="40" Margin="5" Click="BtnStopCycle_Click" Background="#9dd2e0"/>
            <Button x:Name="BtnAcquitDef" Content="Acquitter Défaut" Width="150" Height="40" Margin="5" Click="BtnAcquitDef_Click" Background="#d2c58d"/>

            <Button x:Name="BtnStartCollect" Content="Start collect" Width="150" Height="40" Margin="5,20,5,5" Click="StartCollect_Click" IsEnabled="False" Background="#d5bbe0"/>
            <Button x:Name="BtnStopCollect" Content="Stop collect" Width="150" Height="40" Margin="5,5,5,5" Click="StopCollect_Click" IsEnabled="False" Background="#d5bbe0"/>

            <TextBlock x:Name="TxtStatus" 
                   Text=""
                   FontSize="16" 
                   Margin="5,20,5,5"
                   HorizontalAlignment="Center"
                   FontStyle="Italic"
                   TextWrapping="Wrap"/>
        </StackPanel>

        <Grid Grid.Column="2" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Text="Numéro de fiole :" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="TxtFiole" Text="NaN" FontSize="14"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="FioleInput" Width="80" Margin="0,10,10,0"/>
                    <Button Content="Valider" Margin="0,10,0,0" Click="ValidateFiole_Click"/>
                </StackPanel>
            </StackPanel>

            <Button Grid.Row="1" 
                    x:Name="BtnHardReset" 
                    Content="Hard Reset" 
                    Width="100" Height="40" 
                    Margin="5" 
                    Click="BtnHardReset_Click" 
                    Background="#eb3b6a"
                    VerticalAlignment="Bottom"/>
        </Grid>
        
        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Word 90:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtWord90" 
                Text="NaN"
                FontSize="14"/>
        </StackPanel>

    </Grid>


</Window>